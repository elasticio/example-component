{
  "title": "example-component",
  "description": "An example component with implementations of OIH actions.",
  "buildType": "docker",
  "credentials": {
    "fields": {
      "url": {
        "viewClass": "TextFieldView",
        "label": "API Base URI",
        "required": true,
        "placeholder": "http://localhost:3000"
      },
      "username": {
        "viewClass": "TextFieldView",
        "label": "Username",
        "required": true,
        "placeholder": "myUsername"
      },
      "password": {
        "viewClass": "PasswordFieldView",
        "label": "Password",
        "required": true
      }
    }
  },
  "actions": {
    "makeRawRequest": {
      "main": "./src/actions/rawRequest.js",
      "title": "Raw Request",
      "help": {
        "description": "Manually construct a request to send to the server."
      },
      "fields": {},
      "metadata": {
        "in": {
          "type": "object",
          "required": true,
          "properties": {
            "method": {
              "type": "string",
              "required": true,
              "title": "Method",
              "enum": [
                "GET",
                "PATCH",
                "POST",
                "PUT",
                "DELETE"
              ]
            },
            "url": {
              "type": "string",
              "required": true,
              "title": "URL"
            },
            "data": {
              "type": "object",
              "required": false,
              "title": "Request Body"
            }
          }
        },
        "out": {
          "type": "object",
          "properties": {
            "responseBody": {
              "type": "object",
              "title": "Response",
              "description": "Returned response"
            }
          }
        }
      }
    }
  }
}