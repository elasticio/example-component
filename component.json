{
  "title": "example-component",
  "description": "An example component with implementations of OIH actions.",
  "buildType": "docker",
  "credentials": {
    "fields": {
      "url": {
        "viewClass": "TextFieldView",
        "label": "API Base URI",
        "required": true,
        "placeholder": "http://localhost:3000"
      },
      "username": {
        "viewClass": "TextFieldView",
        "label": "Username",
        "required": true,
        "placeholder": "myUsername"
      },
      "password": {
        "viewClass": "PasswordFieldView",
        "label": "Password",
        "required": true
      }
    }
  },
  "actions": {
    "makeRawRequest": {
      "main": "./src/actions/rawRequest.js",
      "title": "Raw Request",
      "help": {
        "description": "Manually construct a request to send to the server."
      },
      "fields": {
        "throw404": {
          "type": "boolean",
          "label": "Throw error on 404 Response",
          "viewClass": "TextFieldView"
        }
      },
      "metadata": "./src/schemas/rawRequest.json"
    }
  }
}